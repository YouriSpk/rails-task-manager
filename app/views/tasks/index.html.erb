<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<div class="container">
  <h1>Mes tâches</h1>
<ul class="task-list">
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task), class: "task-link" %>
    </li>
  <% end %>
</ul>
<br>
<%= link_to "+ Ajouter une tâche", new_task_path, class: "btn btn-success add-task-link" %>

</div>
