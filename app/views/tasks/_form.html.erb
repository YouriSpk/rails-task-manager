<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<div class="container">
  <%= form_with model: task, class: "task-form", local: true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "task-title" %>

  <%= f.label :details %>
  <%= f.text_area :details, class: "task-details" %>

  <%= f.label :completed %>
  <%= f.check_box :completed, class: "task-completed" %>

  <%= f.submit "Enregistrer", class: "btn btn-success task-submit" %>
<% end %>
</div>
