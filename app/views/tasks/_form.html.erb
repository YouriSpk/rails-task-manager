<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="container text-center mt-4">
  <%= form_with model: task, class: "task-form", local: true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "task-title" %>

  <%= f.label :details %>
  <%= f.text_area :details, class: "task-details" %>

  <%= f.label :completed %>
  <%= f.check_box :completed, class: "task-completed" %>

  <%= f.submit "Enregistrer", class: "btn btn-success task-submit" %>
  <%= link_to "Retour à la liste des tâches", tasks_path, class: "btn btn-info back-to-tasks-link" %>
<% end %>
</div>
</body>
